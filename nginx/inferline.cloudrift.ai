# Custom configuration for inferline.cloudrift.ai
# This file should be placed in /etc/nginx/vhost.d/ on the server

# Route API requests to the backend
location /api/ {
    # Remove /api prefix and forward to backend
    rewrite ^/api/(.*)$ /$1 break;
    proxy_pass http://inferline:8000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    
    # Timeout settings for API calls
    proxy_connect_timeout 300s;
    proxy_read_timeout 300s;
    proxy_send_timeout 300s;
    
    # Buffering settings
    proxy_buffering on;
    proxy_buffers 8 16k;
    proxy_buffer_size 32k;
}

# Health check endpoint
location /health {
    proxy_pass http://inferline:8000/health;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
}