# InferLine Configuration Example
# Copy this file to .env and adjust values as needed

# General
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Gateway Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_WORKERS=4

# Message Broker Configuration
BROKER_TYPE=redis  # redis, rabbitmq, kafka
BROKER_URL=redis://localhost:6379/0
BROKER_QUEUE_NAME=inferline_tasks

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RabbitMQ Configuration (if using RabbitMQ)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Kafka Configuration (if using Kafka)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=inferline_tasks

# Database Configuration
DATABASE_URL=sqlite:///./inferline.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Authentication
AUTH_ENABLED=true
API_KEY_HEADER=X-API-Key
REQUIRE_SSL=false

# Provider Configuration
PROVIDER_POLL_INTERVAL=1.0
PROVIDER_TIMEOUT=30.0
PROVIDER_RETRY_ATTEMPTS=3
PROVIDER_RETRY_DELAY=1.0

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_ENDPOINT=http://localhost:14268/api/traces

# Scaling Configuration
AUTOSCALING_ENABLED=true
MIN_PROVIDERS=1
MAX_PROVIDERS=10
SCALE_UP_THRESHOLD=0.8
SCALE_DOWN_THRESHOLD=0.2

# Cache Configuration
CACHE_ENABLED=true
CACHE_TYPE=redis
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60